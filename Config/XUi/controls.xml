<configs>
    <append xpath="/controls">

        <ebr_material_entry>
            <rect
                style="press, hover, scroll"
                controller="EBRMaterialEntry, EfficientBaseRepair"
                disabled_font_color="[disabledLabelColor]"
                enabled_font_color="[labelColor]"
                sound="[recipe_click]"
                sound_play_on_hover="[default_hover]"
                valid_materials_color="[green]"
                invalid_materials_color="[red]">

                <sprite name="backgroundMain" pos="0,3" width="260" height="50" color="[black]" type="sliced" />
                <sprite name="background" width="254" height="44" pos="3,0" color="[darkGrey]" type="sliced" />
                <sprite name="icon" atlas="ItemIconAtlas" size="40,40" pos="5,-2" foregroundlayer="true" />
                <label name="label" pos="60,-12" width="150" height="30" font_size="24" />
            </rect>
        </ebr_material_entry>

    </append>
</configs>
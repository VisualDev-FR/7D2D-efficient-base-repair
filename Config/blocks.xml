<configs>
    <append xpath="/blocks">

        <block name="EfficientBaseRepair">

            <property name="Class" value="BlockEfficientBaseRepair, EfficientBaseRepair" />
            <property name="CustomIcon" value="cntHardenedChestSecure" />
